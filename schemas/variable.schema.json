{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Variable",
  "contentMediaType": "symbol-variable",
  "format": "parent-object",
  "properties": {
    "$id": {
      "type": "string",
      "format": "hidden"
    },
    "$label": {
      "type": "string",
      "format": "hidden"
    },
    "datatype": {
      "format": "dropdown-select-tag",
      "$ref": "./tags.schema.json",
      "const": ["types"]
    },
    "visibility": {
      "format": "dropdown-select",
      "$ref": "./visibility.schema.json"
    },
    "isArray": {
      "format": "input-string",
      "type": "string"
    },
    "isPointer": {
      "format": "checkbox",
      "type": "boolean"
    },
    "isVolatile": {
      "format": "checkbox",
      "type": "boolean"
    },
    "isConst": {
      "format": "checkbox",
      "type": "boolean"
    },
    "$tag": {
      "format": "hidden",
      "type": "array",
      "const": [
        "*",
        "variable"
      ]
    }
  }
}